@model List<TicariOtomasyon.Models.Classes.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Personeller</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.PersonelId </td>
    <td>@item.PersonelAd </td>
    <td>@item.PersonelSoyad </td>
    <td>
        <img src="@item.PersonelGorsel " style="width:100px; height:100px" />
    </td>
        <td>@item.Departman.DepartmanAd </td>


    <td><a href="/Personel/PersonelGetir/@item.PersonelId" class="btn btn-warning" style="color:white">Güncelle</a></td>
    <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-primary" style="background-color:salmon;">Detaylar</a></td>

</tr>
    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>
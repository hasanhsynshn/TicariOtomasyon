@model List<TicariOtomasyon.Models.Classes.Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-striped">
    <tr>
        <th>Cari Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.CariId</td>
    <td>@item.CariAd</td>
    <td>@item.CariSoyad</td>
    <td>@item.CariSehir</td>
    <td>@item.CariMail</td>
    <td><a href="/Cari/Sil/@item.CariId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Cari/CariGetir/@item.CariId" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Cari/MusteriSatis/@item.CariId" class="btn btn-primary">Satış Geçmişi</a></td>

</tr>
    }


</table>

<a href="/Cari/YeniCari" class="btn btn-info">Yeni Cari Ekle</a>